{
  "manifest_version": 2,
  "name": "New Tab :: Time & Date",
  "short_name": "intfbing",
  "description": "Display bing.com's daily wallpaper on new tabs as well as date and time.",
  "version": "0.1.0",
  "background": {
    "persistent": false,
    "scripts" : [
      "background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "data/override/index.html"
  },
  "permissions": [
    "storage",
    "chrome://favicon/",
    "bookmarks",
    "tabs",
    "topSites",
    "contextMenus",
    "*://*/*"
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  }
}
